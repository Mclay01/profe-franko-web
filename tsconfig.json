{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",                          // ðŸ‘ˆ agrega esto
    "paths": { "@/*": ["./*"] }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    ".expo",
    "mobile",
    "_trash_expo/**",                        // ðŸ‘ˆ carpeta donde movimos los archivos de Expo
    "app/_layout.tsx",                       // ðŸ‘ˆ por si siguen ahÃ­â€¦
    "app/+not-found.tsx",
    "app/index.tsx"
  ]
}
